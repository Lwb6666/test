<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dxjr.portal.account.mapper.RechargeRecordMapper">
	
	<!-- 返回的结果集 -->
	<resultMap type="com.dxjr.portal.account.vo.RechargeRecordVo" id="rechargeRecordResultMap">
		<id property="id" column="id" />
		<result property="userId" 					column="USER_ID" />
		<result property="type" 					column="TYPE" />
		<result property="tradeNo" 					column="TRADE_NO" />
		<result property="status" 					column="STATUS" />
		<result property="money"	    			column="MONEY" />
		<result property="payment"  				column="PAYMENT" />
		<result property="remark" 					column="REMARK" />
		<result property="fee" 						column="FEE" /> 
		<result property="verifyUserid" 			column="VERIFY_USERID" /> 
		<result property="verifyTime" 				column="VERIFY_TIME" />
		<result property="verifyRemark" 			column="VERIFY_REMARK" /> 
		<result property="addtime" 					column="ADDTIME" />
		<result property="addip" 					column="ADDIP" /> 
		<result property="onlinetype" 				column="onlinetype" /> 
		<result property="verifyUserid2" 			column="VERIFY_USERID2" /> 
		<result property="verifyTime2" 				column="VERIFY_TIME2" />
		<result property="verifyRemark2" 			column="VERIFY_REMARK2" />
		<result property="cardNum" 					column="CARDNUM" /> 
		<result property="bankUsername" 			column="BANK_USERNAME" /> 
		<result property="version" 				 	column="VERSION" />
		<result property="username" 				column="username" />
	</resultMap>
	
	<!--基本列 -->
	<sql id="rechargeRecordBaseColumn">
		r.ID, 
		r.USER_ID, 
		r.TYPE, 
		r.TRADE_NO, 
		r.STATUS, 
		r.MONEY, 
		r.PAYMENT, 
		r.REMARK, 
		r.FEE, 
		r.VERIFY_USERID, 
		r.VERIFY_TIME, 
		r.VERIFY_REMARK, 
		r.ADDTIME, 
		r.ADDIP, 
		r.onlinetype, 
		r.VERIFY_USERID2, 
		r.VERIFY_TIME2, 
		r.VERIFY_REMARK2, 
		r.CARDNUM, 
		r.BANK_USERNAME, 
		r.VERSION
	</sql>
	
	<!-- 封装查询条件 -->
	<sql id="rechargeRecord_Where_Clause">
		<if test="id != null">
			and r.id =#{id}
		</if>
		<if test="tradeNo != null ">
			and r.TRADE_NO = #{tradeNo}
		</if>
		<if test="userId != null ">
			and r.USER_ID = #{userId}
		</if>
		<if test="rechargeStatus != null">
			and r.STATUS = #{rechargeStatus}
		</if>		
		<if test="beginTime != null">
			and r.ADDTIME <![CDATA[>=]]> UNIX_TIMESTAMP(#{beginTime})
		</if>
		<if test="endTime != null">
			and r.ADDTIME <![CDATA[<=]]> UNIX_TIMESTAMP(#{endTime})
		</if>
        <if test="bizNo != null">
            and r.BIZ_NO = #{bizNo}
        </if>
        <if test="isCustody !=null">
          <if test="isCustody==0 ">
		    and (r.IS_CUSTODY  = #{isCustody} or r.IS_CUSTODY is null) 
		  </if>
		  <if test="isCustody==1 ">
		    and r.IS_CUSTODY  = #{isCustody}
		  </if>
		</if>
    </sql>
	
  	<!-- 根据条件查询记录集合 -->
	<select id="queryRechargeRecordList" parameterType="com.dxjr.portal.account.vo.RechargeRecordCnd" resultMap="rechargeRecordResultMap" >
		select 	
			m.USERNAME			as username,
		   <include refid="rechargeRecordBaseColumn"/>
		from
			rocky_rechargerecord r,rocky_member m
		where 1=1
		and r.USER_ID = m.id
		<include refid="rechargeRecord_Where_Clause"/>
		ORDER BY r.ADDTIME desc
		<if test="lockedRecordYn != null and lockedRecordYn == 'yes'">
			FOR UPDATE
		</if>	
  	</select>
  	
  	<!-- 根据查询条件统计充值总额 -->
  	<select id="queryRechargeTotalByCnd" parameterType="com.dxjr.portal.account.vo.RechargeRecordCnd" resultType="java.math.BigDecimal" >
		select 	
			ifnull(sum(r.money), 0)
		from
			rocky_rechargerecord r,rocky_member m
		where 1=1
		and r.USER_ID = m.id
		<include refid="rechargeRecord_Where_Clause"/>
  	</select>
  	
  	<!-- 根据条件查询记录数量-->
	<select id="queryRechargeRecordCount" parameterType="com.dxjr.portal.account.vo.RechargeRecordCnd" resultType="java.lang.Integer" >
		select count(r.id)
		from
			rocky_rechargerecord r,rocky_member m
		where 1=1
		and r.USER_ID = m.id
		<include refid="rechargeRecord_Where_Clause"/>
  	</select>
  	
  		<!-- 查询某用户大于起始日期的线上充值总和-->
	<select id="queryOnlineMoneyTotalByDatetime"  resultType="java.math.BigDecimal" >
		SELECT SUM(R.MONEY) 
		FROM rocky_rechargerecord R 
		WHERE R.type = 1 
		and R.STATUS = '1' 
		AND R.USER_ID = #{memberId} 
		and R.verify_time > #{datetime}
  	</select>
  	
  		<!-- 查询某用户大于起始日期的线上充值总和-->
	<select id="queryOfflineMoneyTotalByDatetime"  resultType="java.math.BigDecimal" >
		SELECT SUM(R.MONEY) 
		FROM rocky_rechargerecord R 
		WHERE R.type = 2 
		and R.STATUS = '1' 
		AND R.USER_ID = #{memberId} 
		and R.verify_time2 > #{datetime}
  	</select>  	
</mapper>  
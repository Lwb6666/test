<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
	default-lazy-init="true">

	<description>Shiro安全配置</description>
	
	<!-- Shiro's main business-tier object for web-enabled applications -->

	<!-- Shiro Filter -->
	<bean id="shiroSecurityFilter"  class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
		<property name="securityManager" ref="securityManager" />
		<property name="loginUrl" value="/member/toLoginPage.html" />
		<!-- <property name="successUrl" value="/page/islogin.jsp" /> -->
		<property name="unauthorizedUrl" value="/error/403.html" />
		<property name="filters">
			<map>
				<entry key="sso" value-ref="ssoFilter" />
				<entry key="monitor" value-ref="monitorFilter" />
			</map>
		</property>
		<property name="filterChainDefinitions">
			<value>
				/css/** = anon
				/images/** = anon
				/js/** = anon
				/page/common/** = anon
				/banner/** = anon
				/image/** = anon
				/attached/** = anon
				/cms/** = anon
				
				<!-- SEO -->
				/robots.txt = anon
				/sitemap.xml = anon
				
				/services/** = anon
				/member/toRegisterPage = anon
				/member/checkMemberRepeat = anon
				/member/register = anon
				/member/toXiyi = anon
				/member/toLoginPage = anon
				/member/login = anon
				/logout = anon
				
				/druid/** = monitor
				
				/** = sso
			</value>
		</property>
	</bean>
	
	<bean id="ssoFilter" class="com.dxjr.security.SsoFilter">
		<property name="cookieRetrievingCookieGenerator" ref="cookieRetrievingCookieGenerator" />
	</bean>
	
	<!-- url: http://serverhost/druid/index.html?token=[the token value] -->
	<bean id="monitorFilter" class="com.dxjr.security.MonitorFilter">
		<property name="token" value="ee0ef3bcbb143d64c84b3ab50bc76a9a" />
	</bean>
	
	<bean id="cookieRetrievingCookieGenerator" class="com.dxjr.security.CookieRetrievingCookieGenerator">
		<property name="cookieSecure" value="false" />
		<property name="cookieMaxAge" value="-1" />
		<property name="cookieName" value="CASTGC" />
		<property name="cookiePath" value="/" />
		 <property name="cookieDomain" value="${sso.cookieDomain}" /> 
	</bean>
	
	<bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
	  	<property name="realms">
	  		<list>
	  			<ref bean="shiroRealm" />
	  			<ref bean="ssoRealm" />
	  		</list>
	  	</property>
	  	<property name="subjectFactory" ref="ssoSubjectFactory"/>
	</bean>
	
	<bean id="ssoRealm" class="com.dxjr.security.SsoRealm" />
	<bean id="shiroRealm" class="com.dxjr.security.ShiroRealm" />
	
	<bean id="ssoSubjectFactory" class="com.dxjr.security.SsoSubjectFactory"/>
	
	<!-- SecurityUtils.setSecurityManager(securityManager) -->
	<bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="staticMethod" value="org.apache.shiro.SecurityUtils.setSecurityManager" />
		<property name="arguments" ref="securityManager" />
	</bean>
	
	<!-- 保证实现了Shiro内部lifecycle函数的bean执行 -->
	<bean id="lifecycleBeanPostProcessor" class="org.apache.shiro.spring.LifecycleBeanPostProcessor"/>
</beans>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dxjr.base.mapper.ChannelBindingMapper">
	
	<!-- 结果集 -->
	<resultMap type="com.dxjr.base.entity.ChannelBindingVo" id="channelResultMap">
		<id property="id" column="id" />
		<result property="userId" 					column="user_id" />
		<result property="channelUid" 				column="channel_uid" />
		<result property="source" 				    column="source" />
		<result property="status" 				    column="status" />
		<result property="addtime"	    		    column="addtime" />
		<result property="updatetime"  				column="updatetime" />
	</resultMap>
	
	<!--基本列 -->
	<sql id="channelBaseColumn">
		id, 
		user_id, 
		channel_uid, 
		source, 
		status, 
		addtime, 
		updatetime
	</sql>
	
	<!-- 插入记录，返回主键 -->
	<insert id="insertEntity" parameterType="com.dxjr.base.entity.ChannelBindingVo">
		INSERT INTO t_channel_binding 
		(user_id,channel_uid,source,status,addtime,updatetime)
		VALUES
		(#{userId},#{channelUid},#{source},#{status},NOW(),NOW())
 		 <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">  
      	    SELECT LAST_INSERT_ID() AS ID    
   		 </selectKey>
	</insert>
	
  	<!-- 根据用户ID查询 -->
	<select id="queryChannelByUserId" parameterType="java.lang.String" resultMap="channelResultMap" >
		select <include refid="channelBaseColumn"/> from t_channel_binding where channel_uid=#{hxyid}
  	</select>
	
  	<!-- 更新实体 -->
  	<update id="updateEntity" parameterType="com.dxjr.base.entity.ChannelBindingVo" >
    	update t_channel_binding
	    <set>
	    	updatetime=NOW(),
	      <if test="channelUid != null" >
	        user_id = #{userId},
	      </if>
	      <if test="source != null" >
	        source = #{source},
	      </if>
	      <if test="status != null" >
	        status = #{status},
	      </if>	                                                     
	    </set>
	    where channel_uid = #{channelUid}
	</update>
  
</mapper>  
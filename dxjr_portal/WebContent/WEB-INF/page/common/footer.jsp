/**
 * 提交-计算
 */
function fmSubmit(){
	//if (Validator.Validate('fm',4)==false) return;
	var _money=$("#money").val();
	var _rate=$("#rate").val();
	var _period=$("#period").val();
	
	if(_money==''||_rate==''||_period==''){
		layer.msg('请输入计算数据',1,5);return;
	}
	
	if(isNaN(_money)||isNaN(_rate)||isNaN(_period)){
		layer.msg('输入数据格式有误',1,5);return;
	}
	
	var _lixi=_money*_rate*_period/12/100;
	var _bx=parseFloat(_money)+parseFloat(_lixi);
	$('#calcStep2').show();
	$('#calcStep1').hide();
	$("#bjI").html(fmoney(_money)+'元');
	$("#lvI").html(_rate+'%');
	$("#qxI").html(_period+'个月');
	$("#lxI").html(fmoney(_lixi)+'元');
	$("#bxI").html(fmoney(_bx)+'元');
}
/**
 * 重新计算
 */
function backCal(){
	$('#calcStep1').show();
	$('#calcStep2').hide();
	$("#money").val('');
	$("#rate").val('');
	$("#period").val('');
}
/**
 * 格式化金额
 */
function fmoney(s, n){   
   n = n > 0 && n <= 20 ? n : 2;   
   s = parseFloat((s + "").replace(/[^\d\.-]/g, "")).toFixed(n) + "";   
   var l = s.split(".")[0].split("").reverse(),   
   r = s.split(".")[1];   
   t = "";   
   for(var i = 0; i < l.length; i ++ ){   
      t += l[i] + ((i + 1) % 3 == 0 && (i + 1) != l.length ? "," : "");   
   }   
   return t.split("").reverse().join("") + "." + r;   
}

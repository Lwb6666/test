<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dxjr.portal.account.mapper.RiskMarginMapper">
	
	<!-- 返回的结果集 -->
	<resultMap type="com.dxjr.portal.account.vo.RiskMarginVo" id="riskMarginResultMap">
		<id property="id" column="id" />	
		<result property="account"	    			column="ACCOUNT" />
	</resultMap>
	
	<!--基本列 -->
	<sql id="riskMarginBaseColumn">
		r.ID,  
		r.ACCOUNT
	</sql>
	
	<!-- 封装查询条件 -->
	<sql id="riskMargin_Where_Clause">
		<if test="id != null">
			and r.id =#{id}
		</if>
	</sql>
	
  	<!-- 根据条件查询记录集合 -->
	<select id="queryRiskMargin" resultMap="riskMarginResultMap" >
		select 	
		   <include refid="riskMarginBaseColumn"/>
		from
			rocky_risk_margin r 
		where 1=1
		<include refid="riskMargin_Where_Clause"/>
  	</select> 	
</mapper>  
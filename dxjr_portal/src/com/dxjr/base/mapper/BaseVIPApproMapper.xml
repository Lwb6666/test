<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dxjr.base.mapper.BaseVIPApproMapper">
	
	<!-- 结果集 -->
	<resultMap type="com.dxjr.base.entity.VIPAppro" id="vipApproResultMap">
		<id property="id" column="id" />
		<result property="userId" 			column="USER_ID" />
		<result property="passed" 			column="PASSED" />
		<result property="approver"	    	column="APPROVER" />
		<result property="approveRemark"  	column="APPROVEREMARK" />
		<result property="approveTime"		column="APPROVETIME" />
		<result property="serviceNum"		column="SERVICENUM" />
		<result property="indate"	    	column="INDATE" />
		<result property="addTime"	   	 	column="ADDTIME" />
		<result property="addIp"	    	column="ADDIP" />
		<result property="isFee"	    	column="ISFEE" />
		<result property="remark"	    	column="REMARK" />
		<result property="fee"	    		column="fee" />
	</resultMap>
	
	<!--基本列 -->
	<sql id="vipApproBaseColumn">
		v.ID, 
		v.USER_ID, 
		v.PASSED, 
		v.APPROVER, 
		v.APPROVEREMARK, 
		v.APPROVETIME,
		v.SERVICENUM,
		v.INDATE,
		v.ADDTIME,
		v.ADDIP,
		v.ISFEE,
		v.REMARK,
		v.fee
	</sql>
	
	<!-- 插入记录，返回主键 -->
	<insert id="insertEntity" parameterType="com.dxjr.base.entity.VIPAppro">
		INSERT INTO rocky_vip_appro 
		(USER_ID, PASSED,	APPROVER,	APPROVEREMARK,	APPROVETIME,	SERVICENUM, 
	     INDATE, ADDTIME,	ADDIP,   	ISFEE,	REMARK, fee,platform)
		VALUES
		(#{userId},#{passed},#{approver},#{approveRemark},#{approveTime},#{serviceNum},
		#{indate},#{addTime},#{addIp},#{isFee},#{remark},#{fee},#{platform})
		
 		 <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">  
      	    SELECT LAST_INSERT_ID() AS ID    
   		 </selectKey>
	</insert>
	
  	<!-- 根据ID查询 -->
	<select id="queryById" parameterType="java.lang.Integer" resultMap="vipApproResultMap" >
		select 	
		   <include refid="vipApproBaseColumn"/>
		from
			rocky_vip_appro v
		where 1=1
		and v.id=#{id}
  	</select>
	
  <!-- 更新-->
  <update id="updateEntity" parameterType="com.dxjr.base.entity.VIPAppro" >
    update rocky_vip_appro
    <set >
      <if test="passed != null" >
        PASSED = #{passed},
      </if>
      <if test="approver != null" >
        APPROVER = #{approver},
      </if>
      <if test="approveRemark != null" >
        APPROVEREMARK = #{approveRemark},
      </if>
      <if test="approveTime != null" >
        APPROVETIME = #{approveTime},
      </if>
      <if test="serviceNum != null" >
        SERVICENUM = #{serviceNum},
      </if>
      <if test="indate != null" >
        INDATE = #{indate},
      </if>
      <if test="addTime != null" >
        ADDTIME = #{addTime},
      </if>    
      <if test="addIp != null" >
        ADDIP = #{addIp},
      </if>
      <if test="isFee != null" >
        ISFEE = #{isFee},
      </if>  
      <if test="remark != null" >
        REMARK = #{remark},
      </if>
      <if test="fee != null" >
        fee = #{fee},
      </if>
      <if test="platform != null">
        platform = #{platform},
      </if>
    </set>
    where ID = #{id}
  </update>
  	
  	<select id="findPassed" parameterType="java.lang.Integer" resultType="java.lang.Integer">
  	SELECT IFNULL(PASSED,0)   from rocky_vip_appro WHERE USER_ID = #{userId}
  	</select>
</mapper>  
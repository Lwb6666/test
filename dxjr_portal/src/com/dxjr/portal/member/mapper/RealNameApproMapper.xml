<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dxjr.portal.member.mapper.RealNameApproMapper">
	
	<!-- 结果集 -->
	<resultMap type="com.dxjr.portal.member.vo.RealNameApproVo" id="realNameApproResultMap">
		<id property="id" column="id" />
		<result property="userId" 		column="USER_ID" />
		<result property="realName" 	column="REALNAME" />
		<result property="idCardNo" 	column="IDCARDNO" />
		<result property="pic1" 		column="PIC1" />
		<result property="pic2"	    	column="PIC2" />
		<result property="isPassed"	    column="ISPASSED" />
		<result property="approveUser"	column="APPROVEUSER" />
		<result property="approveTime"	column="APPROVETIME" />
		<result property="appTime"	    column="APPTIME" />
		<result property="appIp"	    column="APPIP" />
		<result property="reason"	    column="REASON" />
		<result property="nativePlace"	column="NATIVEPLACE" />
		<result property="nation"	    column="NATION" />
		<result property="cardType"	    column="CARDTYPE" />
		<result property="birthDay"	    column="BIRTHDAY" />
		<result property="sex"	    	column="SEX" />
		<result property="version"	    column="VERSION" />
	</resultMap>
	
	<!--基本列 -->
	<sql id="realNameApproBaseColumn">
		a.ID, 
		a.USER_ID, 
		a.REALNAME,
		a.IDCARDNO, 
		a.PIC1, 
		a.PIC2,
		a.ISPASSED,
		a.APPROVEUSER,
		a.APPROVETIME,
		a.APPTIME,
		a.APPIP,
		a.REASON,
		a.NATIVEPLACE,
		a.NATION,
		a.CARDTYPE,
		a.SEX,
		a.BIRTHDAY,
		a.VERSION
	</sql>
	
	<!-- 封装查询条件 -->
	<sql id="realnameAppr_Where_Clause">
		<if test="id != null">
			and a.id =#{id}
		</if>
		<if test="userId != null ">
			and a.USER_ID = #{userId}
		</if>
		<if test="idCardNo != null">
			and a.IDCARDNO = #{idCardNo}
		</if>
		<if test="isPassed != null">
			and a.ISPASSED = #{isPassed}
		</if>
	</sql>
	
  	<!-- 根据条件查询记录集合 -->
	<select id="queryRealNameApproList" parameterType="com.dxjr.portal.member.vo.RealNameApproCnd" resultMap="realNameApproResultMap" >
		select 	
		   <include refid="realNameApproBaseColumn"/>
		from
			rocky_realname_appro a
		where 1=1
		<include refid="realnameAppr_Where_Clause"/>
  	</select>
  	
  	<!-- 根据条件查询记录数量-->
	<select id="queryRealNameApproCount" parameterType="com.dxjr.portal.member.vo.RealNameApproCnd" resultType="java.lang.Integer" >
		select count(a.id)
		from
			rocky_realname_appro a
		where 1=1
		<include refid="realnameAppr_Where_Clause"/>
  	</select>
  	
	<!-- 验证重复数据-->
	<select id="queryRepeatRealNameApproCount" parameterType="com.dxjr.portal.member.vo.RealNameApproCnd" resultType="java.lang.Integer" >
		select count(a.id)
		from
			rocky_realname_appro a
		where 1=1
		<if test="id != null">
			and a.id !=#{id}
		</if>
		<if test="idCardNo != null">
			and a.IDCARDNO = #{idCardNo}
			and a.ISPASSED =1
		</if>
  	</select>
  	
  	<insert id="insertRealnameAuthLog" parameterType="java.util.Map">
  		insert into t_realname_auth_log(USER_ID, REALNAME, IDCARDNO, ISPASS, ADDTIME) values (#{userId}, #{realName}, #{idCardNo}, #{isPass}, now())
  	</insert>

	<select id="countRealnameAuthLogByUserId" parameterType="java.lang.Integer" resultType="java.lang.Integer">
		select count(*) from t_realname_auth_log where USER_ID = #{userId}
	</select>
	
	<select id="getByUserId" parameterType="java.lang.Integer" resultMap="realNameApproResultMap">
		select * from rocky_realname_appro where USER_ID=#{userId} and ISPASSED=1
	</select>
</mapper>  
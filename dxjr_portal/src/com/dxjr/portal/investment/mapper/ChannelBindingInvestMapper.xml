<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dxjr.portal.investment.mapper.ChannelBindingInvestMapper">
	
	<!-- 结果集 -->
	<resultMap type="com.dxjr.portal.investment.vo.ChannelBindingInvestVo" id="channelBindingResultMap">
		<id property="id" column="id" />
		<result property="userId" 					column="user_id" />
		<result property="channelUid" 				column="channel_uid" />
		<result property="source" 				    column="source" />
		<result property="status" 				    column="status" />
		<result property="addtime"	    		    column="addtime" />
		<result property="updatetime"  				column="updatetime" />
		<result property="username"  				column="username" />
		<result property="realName"  				column="realName" />
		<result property="bankCardNo"  				column="bankCardNo" />
		<result property="bankCode"  				column="bankCode" />
		<result property="bankName"  				column="bankName" />
		<result property="idCardNo"  				column="idCardNo" />
		<result property="phone"  				    column="phone" />
		<result property="fromly"  				    column="fromly" />
		<result property="userStatus"  				column="userStatus" />
		<result property="token"  				column="token" />
		<result property="secret"  				column="secret" />
	</resultMap>
	
	<!--基本列 -->
	<sql id="channelBaseColumn">
		id, 
		user_id, 
		channel_uid, 
		source, 
		status, 
		addtime, 
		updatetime,
		username,
		realName,
		bankCardNo,
		bankCode,
		bankName,
		idCardNo,
		fromly,
		phone,
		token,
		userStatus,
		secret
	</sql>
	
	<!-- 插入记录，返回主键 -->
	<insert id="insertEntityInfo" parameterType="com.dxjr.portal.investment.vo.ChannelBindingInvestVo">
		INSERT INTO t_channel_binding 
		(user_id,channel_uid,source,status,addtime,updatetime,username,realName,bankCardNo,bankCode,bankName,idCardNo,phone,fromly,userStatus,token,secret)
		VALUES
		(#{userId},#{channelUid},#{source},#{status},NOW(),NOW(),#{username},#{realName},#{bankCardNo},#{bankCode},#{bankName},#{idCardNo},#{phone},#{fromly},#{userStatus},#{token},#{secret})
 		 <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">  
      	    SELECT LAST_INSERT_ID() AS ID    
   		 </selectKey>
	</insert>
	
  	<!-- 根据用户ID查询 -->
	<select id="queryChannelByUserId" parameterType="java.lang.String" resultMap="channelBindingResultMap" >
		select <include refid="channelBaseColumn"/> from t_channel_binding where 1=1 and channel_uid=#{hxyid} limit 1
  	</select>
  	
  	<!-- 根据用户ID查询 -->
	<select id="queryChannelBypinId" parameterType="java.lang.String" resultMap="channelBindingResultMap" >
		select <include refid="channelBaseColumn"/> from t_channel_binding where  phone=#{phone} 
  	</select>
  	
  	<!-- 根据用户名查询 -->
	<select id="queryBindingInfo" parameterType="com.dxjr.portal.investment.vo.ChannelBindingInvestVo" resultMap="channelBindingResultMap" >
		select <include refid="channelBaseColumn"/> from t_channel_binding where channel_uid=#{hxyid} and username=#{username}
  	</select>
  	
  	<!-- 根据用户手机号码查询 -->
	<select id="queryChannelByUserPhone" parameterType="com.dxjr.portal.investment.vo.ChannelBindingInvestVo" resultType="java.lang.Integer" >
		select count(1) from t_channel_binding where 1=1
		<if test="phone != null" >
		and phone=#{phone} 
		</if>
		<if test="status != null" >
		and status=#{status}
		</if>
		<if test="userId != null" >
		and user_id=#{userId}
		</if>
		<if test="token != null" >
		and token=#{token}
		</if>
  	</select>
	
  	<!-- 更新实体 -->
  	<update id="updateEntity" parameterType="com.dxjr.portal.investment.vo.ChannelBindingInvestVo" >
    	update t_channel_binding
	    <set>
	    	updatetime=NOW(),
	      <if test="channelUid != null" >
	        user_id = #{userId},
	      </if>
	      <if test="source != null" >
	        source = #{source},
	      </if>
	      <if test="status != null" >
	        status = #{status},
	      </if>	                                                     
	    </set>
	    where channel_uid = #{channelUid}
	</update>
	
	<!-- 更新实体 -->
  	<update id="updateEntityDl" parameterType="com.dxjr.portal.investment.vo.ChannelBindingInvestVo" >
    	update t_channel_binding
	    <set>
	    	updatetime=NOW(),
	      <if test="channelUid != null" >
	        user_id = #{userId},
	      </if>
	      <if test="source != null" >
	        source = #{source},
	      </if>
	      <if test="realName != null" >
	        realName = #{realName},
	      </if>
	      <if test="username != null" >
	        username = #{username},
	      </if>
	      <if test="bankCardNo != null" >
	        bankCardNo = #{bankCardNo},
	      </if>
	      <if test="bankCode != null" >
	        bankCode = #{bankCode},
	      </if>
	      <if test="bankName != null" >
	        bankName = #{bankName},
	      </if>
	      <if test="idCardNo != null" >
	        idCardNo = #{idCardNo},
	      </if>
	      <if test="status != null" >
	        status = #{status},
	      </if>	                                                     
	    </set>
	    where channel_uid = #{channelUid} and user_id = #{userId}
	    
	</update>
	
	<!-- 更新实体 -->
  	<update id="updateBinding" parameterType="com.dxjr.portal.investment.vo.ChannelBindingInvestVo" >
    	update t_channel_binding
	    <set>
	    	updatetime=NOW(),
	      <if test="status != null" >
	        status = #{status}
	      </if>	                                                     
	    </set>
	    where channel_uid = #{channelUid}
	    and phone = #{phone}
	</update>
  
</mapper>  